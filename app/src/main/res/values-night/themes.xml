<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RandomPokemon" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_light</item>
        <item name="colorSecondaryVariant">@color/accent_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:fontFamily">@font/pokemon_solid</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RandomPokemon.CategoryTextStyle">
        <item name="android:textColor">@color/category_text_color</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:fontFamily">@font/pokemon_hollow</item>
        <item name="android:textSize">@dimen/sub_text_size</item>
        <item name="android:layout_marginStart">@dimen/inner_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/inner_horizontal_margin</item>
        <item name="android:minWidth">@dimen/category_text_min_width</item>
    </style>

    <style name="Theme.RandomPokemon.StatsTextStyle" parent="Theme.RandomPokemon.CategoryTextStyle">
        <item name="android:textColor">@color/data_text_color</item>
        <item name="android:fontFamily">@font/pokemon_solid</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>

    <style name="Theme.RandomPokemon.ImageStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/inner_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/inner_horizontal_margin</item>
    </style>

    <style name="Theme.RandomPokemon.StatsStyle">
        <item name="android:layout_marginStart">@dimen/inner_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/inner_horizontal_margin</item>
    </style>
</resources>